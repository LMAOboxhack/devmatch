<div class="container">
  <div class="card bg-light mb-3">
    <div class="card-body">
      <div class="media">
        <% if @user.profile.profile_picture.attached? %>
          <%= image_tag(@user.profile.profile_picture, class: 'img-fluid mr-4') %>
        <% end %>
        <div class="media-body">
          <h4><%= job_title_icon(@user) %><%= @user.profile.job_title %></h4><hr/>
          <p><strong>Name: </strong><%= @user.profile.first_name %> <%= @user.profile.last_name %></p>
          <% if current_user.plan_id == 2 %>
            <p><strong>Phone number: </strong><%= @user.profile.phone_number %></p>
            <p><strong>Email: </strong><%= @user.profile.email %></p>
          <% end %>
          <% if params[:id].to_i == current_user.id %>
            <%= link_to "Edit profile", edit_user_profile_path(current_user.id), class: 'btn btn-info mt-2' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>