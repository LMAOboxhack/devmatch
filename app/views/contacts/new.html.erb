<div class="container">
    <h3 class="text-center">Contact Us</h3>
    <%= form_for new_contact_path do |f| %>
        <%= f.label :Name %>
        <%= f.text_field :name %>
        <%= f.label :Email %>
        <%= f.text_field :email %>
        <%= f.label :Message %>
        <%= f.text_area :message %>
        <%= f.submit 'Submit' %>
    <% end %>
</div>