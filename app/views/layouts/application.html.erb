<!-- This html page shows up on every page of our website/app. -->

<!DOCTYPE html>
<html>
    <head>
        <title>DevMatch</title>
        <%= csrf_meta_tags %>
    
        <link href="//fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">   <!-- Google fonts embed-->
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag "https://js.stripe.com/v2/", type: 'text/javascript' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
    </head>
    <body>
        <nav class="navbar navbar-default navbar-static-top" role="navigation"> <!-- Navbar from Bootstrap -->
            <div class='container'>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- The Rails way to add links -->
                <%= link_to root_path, class: "navbar-brand" do %>    <!-- This way is for if you need to group multiple clickables together, for instance an icon & text, in this case. -->
                    <i class ="fa fa-group"></i>DevMatch
                <% end %>
                </div>
                <div class="collapse navbar-collapse" id="main-nav-collapse">
                    <div class="nav navbar-nav navbar-right">
                        <% if user_signed_in? %>
                            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-primary navbar-btn' %>
                        <% else %>
                            <div class="btn-group">
                                <%= link_to "Login", new_user_session_path, class: 'btn btn-primary navbar-btn' %>
                                <button type="button" class="btn btn-primary dropdown-toggles navbar-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                  <span class="caret"></span>
                                  <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><%= link_to "Sign Up", root_path %></li>
                                </ul>
                            </div>
                        <% end %>
                        
                    </div>
                    <ul class="nav navbar-nav navbar-right">
                        <li><%= link_to "About", about_path %></li>    <!-- This way is for if you only need clickable text. -->
                        <li><%= link_to "Contact Us", new_contact_path %></li>
                    </ul>
                    
                </div> <!-- /.navbar-collapse -->
            </div>
        </nav>
        
        <div class="container">
            <% flash.each do |key, value| %>
                <%= content_tag :div, value.html_safe, class: "alert alert-#{key}" %>
            <% end %>
        </div>
        <%= yield %>   <!-- This line is where Rails injects the code from the home.html.erb file. -->
    </body>
</html>